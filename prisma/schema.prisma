// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  revenue
  expense
}

enum Revenue {
  oil
  other_revenues
  previous_years
}

enum Expense {
  salaries
  operational
  development
  support
}

enum Oil {
  oil_sales
  oil_taxes
}

enum OtherRevenues {
  taxes
  customs
  telecommunications
  libyan_central_bank
  fuel
  other
}

model category {
  type    Category
  name    String
  value   BigInt
  date    DateTime
  revenue revenue[]
  expense expense[]

  @@id([date, type], name: "key")
}

model revenue {
  type  Revenue
  name  String
  value BigInt

  category       category         @relation(fields: [date, parent_type], references: [date, type])
  date           DateTime
  parent_type  Category
  oil            oil[]
  other_revenues other_revenues[]

  @@id([date, type], name: "key")
}

model expense {
  type  Expense
  name  String
  value BigInt

  category      category @relation(fields: [date, parent_type], references: [date, type])
  date          DateTime
  parent_type Category

  @@id([date, type], name: "key")
}

model oil {
  type  Oil
  name  String
  value BigInt

  revenue      revenue  @relation(fields: [date, parent_type], references: [date, type])
  date         DateTime
  parent_type Revenue

  @@id([date, type], name: "key")
}

model other_revenues {
  type  OtherRevenues
  name  String
  value BigInt

  revenue      revenue  @relation(fields: [date, parent_type], references: [date, type])
  date         DateTime
  parent_type Revenue

  @@id([date, type], name: "key")
}
